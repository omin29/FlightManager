@model Data.Models.Flight

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Flight</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.LocationFrom)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LocationFrom)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.LocationTo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LocationTo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DepartureTime)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DepartureTime)
        </dd>
        <dt class = "col-sm-2">
            Flight duration:
        </dt>
        <dd class="col-sm-10">
            @String.Format("{0} days; {1} hours; {2} minutes", Model.LandingTime.Subtract(Model.DepartureTime).Days, Model.LandingTime.Subtract(Model.DepartureTime).Hours, Model.LandingTime.Subtract(Model.DepartureTime).Minutes)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PlaneType)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PlaneType)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PilotName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PilotName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FreePassengerSeats)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FreePassengerSeats)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FreeBusinessSeats)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FreeBusinessSeats)
        </dd>
    </dl>
</div>
<div>
    @{if (User.IsInRole("Admin"))
        {
            <a asp-action="Edit" asp-route-id="@Model.UniquePlaneNumber">Edit</a> 
        }
    }
  </div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
<br />
<h1>Passengers for this flight</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                <font>PersonalIdentificationNumber</font>
            </th>
            <th>
                <font>FirstName</font>
            </th>
            <th>
                <font>MiddleName</font>
            </th>
            <th>
                <font>LastName</font>
            </th>
            <th>
                <font>PhoneNumber</font>
            </th>
            <th>
                <font>Nationality</font>
            </th>
            <th>
                <font>TicketType</font>
            </th>
            <th>
                <font>Reservation</font>
            </th>            
        </tr>
    </thead>
    <tbody>
        @foreach (var item in (List<Passenger>)ViewData["Passengers"])
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.PersonalIdentificationNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MiddleName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nationality)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TicketType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Reservation.Email)
                </td>                
            </tr>
        }
    </tbody>
</table>

